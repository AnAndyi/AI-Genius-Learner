from openai import OpenAI
# Import the requests library and the HTTPBasicAuth class
import requests
import openai
# Set your API key in code (not recommended for security reasons)
openai.api_key = "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"

# Get the user input
course = input("Enter the course name: ")
chapter = input("Enter the chapter name: ")
difficulty = input("Enter the difficulty level:(1-100)")
num_questions = int(input("Enter the number of questions: "))

client = OpenAI(api_key="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")

prompt = f"Can you give me {num_questions} practice questions of {course}, {chapter} with difficulty scale {difficulty}/100? Please just list the questions without saying anything else such as the sentace before \n\n1."
# Make a request to the OpenAI API using the Completion endpoint
def chat_gpt(prompt):
  completion = client.chat.completions.create(
    model='gpt-3.5-turbo',
    messages=[{'role': 'user', 'content': prompt}]
  )
  return completion.choices[0].message

# Print the query generated by the model
print(chat_gpt(prompt))

